<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_edit_info_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:textSize="16sp"
            tools:text="這是一段很長的文字這是一段很長的文字這是一段很長的文字這是一段很長的文字這是一段很長的文字" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_info_text"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_edit_info_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_info_title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title" />

        <EditText
            android:id="@+id/et_info_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_info_title_right"
            android:layout_alignStart="@id/tv_info_title_right"
            android:layout_below="@id/tv_info_title_right"
            android:layout_marginTop="2dp"
            android:maxLines="1" />

    </RelativeLayout>

</LinearLayout>