<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#666699</item>
    </style>

    <style name="NormalMargin">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="NormalPadding_6dp">
        <item name="android:padding">6dp</item>
    </style>

    <style name="MainButton">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_welcome_button</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextViewStyle_single_line">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/deep_gray</item>
    </style>

    <style name="EditTextStyle_default">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColorHint">@color/w_gray</item>
    </style>

    <style name="EditTextStyle_single_line">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/w_gray</item>
    </style>

    <style name="EditTextStyle_multiple_line">
        <item name="android:padding">8dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColorHint">@color/w_gray</item>
        <item name="android:background">@drawable/selector_edittext_black_frame</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/selector_switch_textcolor</item>
    </style>

    <style name="CustomSwitch" parent="@style/Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/brown_alpha_30</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/pink</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray</item>
    </style>

</resources>
