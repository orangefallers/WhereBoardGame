<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#666699</item>
    </style>

    <style name="NormalMargin">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="NormalPadding_6dp">
        <item name="android:padding">6dp</item>
    </style>

    <style name="MainButton">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_welcome_button</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/selector_switch_textcolor</item>
    </style>

    <style name="CustomSwitch" parent="@style/Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/brown_alpha_30</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/pink</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray</item>
    </style>

</resources>
