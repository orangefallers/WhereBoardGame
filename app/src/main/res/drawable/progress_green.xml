<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <rotate
            android:fromDegrees="-90"
            android:toDegrees="990">

            <shape
                android:innerRadiusRatio="3.75"
                android:shape="ring"
                android:thicknessRatio="14"
                android:useLevel="false">

                <size
                    android:width="1dp"
                    android:height="1dp" />

                <gradient
                    android:centerColor="#45913c"
                    android:endColor="#12ee80"
                    android:startColor="#055902"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>
</layer-list>